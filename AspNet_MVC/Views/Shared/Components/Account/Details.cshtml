<div class="details-container">
    <h2>Account Details</h2>
    <div>
        <h5>Basic Info</h5>
        <form class="basic-info">
            <div class="form-group">
                <label for="">First name</label>
                <input type="text" name="" placeholder="Enter your first name">
            </div>

            <div class="form-group">
                <label for="">Last name</label>
                <input type="text" name="" placeholder="Enter your last name">
            </div>

            <div class="form-group">
                <label for="">Email address</label>
                <input type="text" name="" placeholder="Enter your email address">
            </div>

            <div class="form-group">
                <label for="">Phone</label>
                <input type="text" name="" placeholder="Enter your email address">
            </div>

            <div class="form-group">
                <label for="">Bio (optional)</label>
                <textarea placeholder="Add a short bio..."></textarea>
            </div>

            <div class="btn-holder">
                <button class="btn-gray">Cancel</button>
                <button class="btn-theme">Save Changes</button>
            </div>
        </form>
    </div>

    <div>
        <h5>Address</h5>
        <form id="address">

            <div class="form-group">
                <label for="">Address line 1</label>
                <input type="text" name="" placeholder="Enter your address line">
            </div>

            <div class="form-group">
                <label for="">Adress line 2 (optional)</label>
                <input type="text" name="" placeholder="Enter your second address line">
            </div>

            <div class="form-group">
                <label for="">Postal code</label>
                <input type="text" name="" placeholder="Enter your postal code">
            </div>

            <div class="form-group">
                <label for="">City</label>
                <input type="text" name="" placeholder="Enter your city">
            </div>

            <div class="btn-holder">
                <button class="btn-gray">Cancel</button>
                <button class="btn-theme">Save Changes</button>
            </div>
        </form>
    </div>
</div>
