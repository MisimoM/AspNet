@model SignInViewModel
@{
    ViewData["Title"] = Model.Title;
}

<section class="sign-in">
    <div class="container">
        <div class="grid-container">
            <div>
                <h1>Welcome Back</h1>
                <p>Don't have an account yet? <a asp-controller="Authentication" asp-action="SignUp">Sign up here.</a></p>
            </div>
            <form class="sign-in-form" asp-controller="Authentication" asp-action="SignIn">
                
                <div class="form-group">
                    <label asp-for="Form.Email"></label>
                    <input asp-for="Form.Email" />
                </div>
                
                <div class="form-group">
                    <label asp-for="Form.Password"></label>
                    <input asp-for="Form.Password" />
                </div>

                <div class="form-group-checkbox">
                    <input asp-for="Form.RememberMe">
                    <label asp-for="Form.RememberMe"></label>
                </div>

                <span class="field-validation-error">@Model.ErrorMessage</span>
               
                <button class="btn-theme" type="submit">@Model.Title</button>
                <a href="">Forgot your password?</a>
            </form>
        </div>
    </div>
</section>