<header>
	<div class="container">
		<a id="logo" asp-controller="Home" asp-action="Index"><img src="~/images/home/showcase/logo-light.svg" alt="Logo" /></a>

		<div id="menu">
			<nav>
				<a class="menu-link" asp-controller="Home" asp-action="Index" asp-fragment="overview">Overview</a>
				<a class="menu-link" asp-controller="Home" asp-action="Index" asp-fragment="features">Features</a>
				<a class="menu-link" asp-controller="Home" asp-action="Index" asp-action="Contact">Contact</a>
			</nav>
		</div>

		<div class="btn-switch">
			<label>Light</label>
			<label class="switch" for="switch-mode">
				<input type="checkbox" id="switch-mode" />
				<span class="slider round"></span>
			</label>
			<label>Dark</label>
		</div>

		<div class="account-buttons">
			<a class="btn-gray" asp-controller="Authentication" asp-action="SignIn"><i class="fa-regular fa-right-to-bracket"></i><span>Sign In</span></a>
			<a class="btn-theme" asp-controller="Authentication" asp-action="SignUp"><i class="fa-regular fa-user"></i><span>Sign Up</span></a>
		</div>
	</div>
</header>
